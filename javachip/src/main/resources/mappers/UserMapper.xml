<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.javachip.mapper.UserMapper">
	
	<select id="selectUserByLogin" resultType="userVO" parameterType="userVO">
		SELECT uId
		     , uName
		     , uStatus
		  FROM user
		 WHERE uId = #{uId}
		   AND uPw = #{uPw}
	</select>
	<!-- 
		dao에서 sqlSession객체의 
		selectOne 메소드를 호출하면 되고
		그의 결과 타입은 int 이다.
	 -->
	<select id="selectCntById" 
	     parameterType="String" 
	     resultType="int">
		select count(uId)
		  from user
		 where uId = #{uId}
	</select>
	
	<insert id = "insert" parameterType="userVO">
		INSERT INTO user(
			 uId
			,uPw
			,uName
			,uJoin
			,uRetire
			,uPhone
			,uStatus
			,uBisno
			,uAdd
			,uMail
			,uAlertNum
		)values(
			 #{uId}
			,#{uPw}
			,#{uName}
			,NOW()
			,"N"
			,#{uPhone}
			,"N"
			,""
			,#{uAdd}
			,#{uMail}
			,"0"
		)
	</insert>
	
	<insert id = "insertBiz" parameterType="userVO">
		INSERT INTO user(
			 uId
			,uPw
			,uName
			,uJoin
			,uRetire
			,uPhone
			,uStatus
			,uBisno
			,uAdd
			,uMail
			,uAlertNum
		)values(
			 #{uId}
			,#{uPw}
			,#{uName}
			,NOW()
			,"N"
			,#{uPhone}
			,"B"
			,#{uBisno}
			,#{uAdd}
			,#{uMail}
			,"0"
		)
	</insert>
	<!-- 관리자 회원 전체 목록 -->
	<select id="selectUserByAdmin" resultType="userVO" parameterType="AdminSearchVO">
		SELECT uNo,uId,uName,uJoin,uRetire,uPhone,uStatus,uBisno,uAdd,uMail,uAlertNum FROM user
		<if test='AdminSearchUserType != null and AdminSearchUserType.equals("N")'>
			WHERE uStatus = #{AdminSearchUserType}
		</if>
		<if test='AdminSearchUserType != null and AdminSearchUserType.equals("B")'>
			WHERE uStatus = #{AdminSearchUserType}
		</if>
		<if test='AdminSearchId != null and AdminSearchId.equals("uId")'>
			WHERE uId like concat('%', #{AdminSearchIdValue}, '%')
		</if>
		<if test='AdminSearchId != null and AdminSearchId.equals("uName")'>
			WHERE uName like concat('%', #{AdminSearchIdValue}, '%')
		</if>
	</select>
	
	<!-- 관리자 회원 세부 목록 -->
	<select id="selectUserOneByuNoByAdmin" resultType="userVO" parameterType="int">
		SELECT uNo,uId,uName,uJoin,uRetire,uPhone,uStatus,uBisno,uAdd,uMail,uAlertNum FROM user
			where uNo = #{uNo}
	</select>
</mapper>