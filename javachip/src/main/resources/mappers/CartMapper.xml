<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javachip.mapper.cartMapper">

	<!-- 장바구니 조회 -->
	<select id="selectCartByUno" resultType="CartVO" parameterType="int">
		SELECT *
		  FROM cart
		 WHERE uNo = #{uNo}
		   AND cStatus = 'C'
	</select>
	
	<!-- 장바구니 총 합계 금액 -->
	<select id="totalPrice" resultType="int" parameterType="int">
		SELECT SUM(pPrice*cCount) as total
		  FROM cart c
		  JOIN product p
		    ON c.pNo = p.pNo
		 WHERE uNo = #{uNo}
		   AND c.cStatus = 'C'
	</select>
	
	<!-- 장바구니 추가 -->
	<insert id="addCart" parameterType="CartVO">
		INSERT INTO
		cart (
			 uNo
			,pNo
			,cCount
		) VALUES (
			 #{uNo}
			,#{pNo}
			,#{cCount}
		)
	</insert>
	
	<!-- 장바구니에서 상품 삭제 -->
	<delete id="deleteOneCart" parameterType="int">
		DELETE
		  FROM cart
		 WHERE cNo = #{cNo}
	</delete>
	
	<!-- 장바구니 전체 삭제 -->
	<delete id="deleteAllCart" parameterType="int">
		DELETE
		  FROM cart
		 WHERE uNo = #{uNo}
		   AND cStatus = 'C'
	</delete>
	
	<!-- 장바구니 상품 갯수 수정 -->
	<update id="updateCart" parameterType="CartVO">
		UPDATE cart
		   SET cCount = #{cCount}
		 WHERE cNo = #{cNo}
		   AND cStatus = 'C'
	</update>
	
	<!-- 결제 시 사용할 쿼리 -->
	<update id="orderCart" parameterType="CartVO">
		UPDATE cart
		   SET cStatus = 'O'
		     , oNo = #{oNo}
		 WHERE uNo = #{uNo}
		   AND cStatus = 'C' 
	</update>
</mapper>